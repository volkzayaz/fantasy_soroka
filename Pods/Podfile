source 'https://github.com/CocoaPods/Specs.git'
workspace '../FantasyApp.xcworkspace'
project '../FantasyApp.xcodeproj'

platform :ios, '11.2'
use_frameworks!
inhibit_all_warnings!

target 'FantasyApp' do

    #infrastructure
    pod 'R.swift', '5.0.3'
    pod 'SwiftyStoreKit'

    #data layer
    pod 'Parse'
    pod 'FBSDKCoreKit'
    pod 'FBSDKLoginKit'
    pod 'Moya', '13.0.1'
    pod 'Socket.IO-Client-Swift', '~> 15.2.0'

    pod 'RxCocoa', '~> 5.0'
    pod 'RxDataSources', '~> 4.0.1'
    pod 'RxCoreLocation', '~> 1.4'
    pod 'RxViewController'

    #analytics
    pod 'Amplitude-iOS', '~> 4.8'
    pod 'AppsFlyerFramework'
    pod 'Analytics'

    #deep linking
    pod 'Branch'

    #ui
    pod 'SnapKit', '~> 4.2'
    pod 'Kingfisher', '~> 5.8'

    pod 'YPImagePicker'

    pod 'Koloda', '~> 5.0'
    pod 'iCarousel', '~> 1.8'
    pod 'KMPlaceholderTextView'
    pod 'SmoothPicker', '~> 1.1.3'

    pod 'SlackTextViewController'

    #firebase
    pod 'Firebase/Crashlytics'
    pod 'Firebase/RemoteConfig'
    pod 'Firebase/Analytics'

    # IAP
    pod 'ApphudSDK'

end

target 'FantasyAppTests' do



end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    if ['ParseLiveQuery', 'Bolts-Swift', 'Starscream'].include? target.name
      target.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '4.2'
      end
    end
  end
end
