source 'https://github.com/CocoaPods/Specs.git'
workspace '../FantasyApp.xcworkspace'
project '../FantasyApp.xcodeproj'

platform :ios, '11.0'
use_frameworks!
inhibit_all_warnings!

target 'FantasyApp' do

    #infrastructure
    pod 'Crashlytics', '~> 3.13'
    pod 'R.swift', '5.0.3'
    pod 'SwiftyStoreKit'

    #data layer
    pod 'Parse', '1.17.3'
    pod 'Parse/FacebookUtils', '1.17.3'
    pod 'FBSDKCoreKit', '5.7.0'
    pod 'FBSDKLoginKit', '5.7.0'
    pod 'Moya', '13.0.1'
    pod 'Socket.IO-Client-Swift', '~> 15.2.0'
  
    pod 'RxCocoa', '~> 5.0'
    pod 'RxDataSources', '~> 4.0.1'
    pod 'RxCoreLocation', '~> 1.4'
    
    #analytics
    pod 'Amplitude-iOS', '~> 4.8'

    #deep linking
    pod 'Branch', '~> 0.29.3'
    
    #ui
    pod 'SnapKit', '~> 4.2'
    pod 'Kingfisher', '~> 5.8'

    pod 'YPImagePicker', '~> 4.1.2'

    pod 'Koloda', '~> 5.0'
    pod 'iCarousel', '~> 1.8'
    pod 'KMPlaceholderTextView'
    pod 'SmoothPicker', '~> 1.1.3'
    
    pod 'SlackTextViewController'

    #feedback
    pod 'ZendeskSDK'
    
    #firebase
    pod 'Firebase/RemoteConfig', '6.21.0'

end

target 'FantasyAppTests' do
  
  
  
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    if ['ParseLiveQuery', 'Bolts-Swift', 'Starscream'].include? target.name
      target.build_configurations.each do |config|
        config.build_settings['SWIFT_VERSION'] = '4.2'
      end
    end
  end
end

